[Trigger]
Operation = Remove
Type = Path
Target = usr/lib/modules/*/vmlinuz
Target = usr/lib/modules/*/build/

[Action]
Description = Saving Linux kernel modules...
When = PreTransaction
Depends = mkmm
Exec = /bin/sh -c 'xargs dirname | xargs basename -a | sort -u | xargs -l mkmm -c save'
NeedsTargets
